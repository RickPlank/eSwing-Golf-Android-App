<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nihar.eswing.StartPlayingNew"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:id="@+id/grid">

        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Pair a device"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Add/Select Players"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_row="0"
            android:layout_column="1"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_row="1"
            android:layout_column="1"
            android:checked="false" />

        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Add/Select clubs"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:layout_row="2"
            android:layout_column="1"
            android:checked="false" />

        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Shot Display Mode"
            android:id="@+id/textView9"
            android:layout_row="3"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:layout_row="3"
            android:layout_column="1"
            android:checked="false" />

        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Estimated wind speed and direction"
            android:id="@+id/textView7"
            android:layout_row="4"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            android:layout_row="4"
            android:layout_column="1"
            android:checked="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/playButton"
            android:layout_row="6"
            android:layout_column="0" />

    </GridLayout>
</LinearLayout>
